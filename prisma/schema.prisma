generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DeviceSession {
  id            String   @id @default(uuid())
  userId        String   
  deviceId      String   
  userAgent     String?
  ip            String?
  createdAt     DateTime @default(now())
  lastSeenAt    DateTime @updatedAt
  forcedLogout  Boolean  @default(false)
  displayName   String?  
  @@index([userId])
}